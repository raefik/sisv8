<%= form_for(@log_book) do |f| %>
  <% if @log_book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@log_book.errors.count, "error") %> prohibited this log_book from being saved:</h2>
      <ul>
      <% @log_book.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
<div class="oneTwo">
	<div class="widget">	
			<div class="header"><span><span class="ico gray window"></span>Log Book</span></div>
			<div class="content">
				  <div class="section">
				    <%= f.label :date %><br />
				    <%= f.text_field :date ,:id => 'datepick',:class=>'datepicker' %>
				  </div>
				  <div class="section">
				    <label>Upload File</label><br />
				    	<div>
				    	<%if @log_book.upload_content_type == "image/png"%>
				    		<img src="<%= @log_book.upload %>" height="80px" /> </br>
				    	<%end%>	
				    	<%if @log_book.upload_content_type == "application/vnd.openxmlformats-officedocument.wordprocessingml.document" || @log_book.upload_content_type == "application/msword"%>
				    		<img src="/assets/wordms.png" height="100px" /> </br>
				    	<%end%>	
				    	<%if @log_book.upload_content_type == "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet" ||  @log_book.upload_content_type == "application/vnd.ms-excel"%>
				    		<img src="/assets/xcelms.png" height="100px" /> </br>
				    	<%end%>	
				    	<%if @log_book.upload_content_type == "application/pdf"%>
				    		<img src="/assets/pdfdownload.png" height="100px" /> </br>
				    	<%end%>	
						<%= f.file_field :upload %>
				    	</div>
				  </div>
			</div>
	</div>
</div>  
<div class="oneTwo">
	<div class="widget">	
	  <div class="header"><span></span></div>
	  <div class="content">
	  <div class="section">
				    <%= f.label :title %><br />
				    <%= f.text_field :title %>
					<%= f.text_field :user_id, :value=>current_user.id, :hidden=>true %>
				  </div>
	  <div class="section">
	    <%= f.label :content %><br />
	    <%= f.text_area :content ,:rows=>"10"%>
	  </div>
	  
	   <div class="section last">	
	   	<div class="actions">
	    	<%= f.submit "Done", :class => 'uibutton loading', :title => 'Saving' %>
		</div>
	   </div>
	  <% end %>
	
	  
	</div></div>
</div>	

	
<div class="clear"></div>
<style>
.oneTwo {
width: 49%;
display: inline;
float: left;
}
</style>