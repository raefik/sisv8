<div class="widget">
	
	<div class="header"><span><span class="ico gray window"></span> Programme Name</span></div>
						 <div class="content">
		<%= form_for(@prog_name) do |f| %>
		  <% if @prog_name.errors.any? %>
		    <div id="error_explanation">
		      <h2><%= pluralize(@prog_name.errors.count, "error") %> prohibited this prog_name from being saved:</h2>
		
		      <ul>
		      <% @prog_name.errors.full_messages.each do |msg| %>
		        <li><%= msg %></li>
		      <% end %>
		      </ul>
		    </div>
		  <% end %>
		
		  <div class="section">
		    <%= f.label :name %><br />
		    <%= f.text_area :name ,:cols=>'50px',:rows=>'5px' %>
		  </div>
		  <div class="section">
		    <%= f.label :code %><br />
		    <%= f.text_field :code %>
		  </div>
		  <div class="section">
		    <%= f.label 'faculty' %><br />
		    <%=collection_select(:prog_name,:faculty_id,Faculty.all,:id,:name,:prompt=>"Please Select")%>
		  </div>
		  
		  <div class="actions">
		    <%= f.submit "Submit", :class => 'uibutton loading', :title => 'Submit' %><%= link_to 'Back', prog_names_path , :class => 'uibutton'%>
		  </div>
		<% end %>
	</div>
</div>
