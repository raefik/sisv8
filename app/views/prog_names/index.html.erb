<style>
    table{
        margin: 10px;padding: 10px
        border-collapse: collapse;
        border-spacing: 0;
        padding: 10px;
        margin: 0px;
    }
    table td{
        padding: 10px;
        font-size: 90%;
        border-bottom-style:solid;
        border-bottom-width: 1px;
    }

    table th{
      font-weight:bold; 
      border-bottom-style:solid;
      border-bottom-width: 3px;
      padding-bottom: 10px;
      border-bottom-color: #7F6DDD;
      color: #7F6DDD;
    }
</style>
<h4>Listing programme </h4><%= link_to 'New Programme ', new_prog_name_path ,:class => 'uibutton loading', :title => 'Add new' %>

<table bgcolor="white">
  <tr>
    <th>Name</th>
    <th>Code</th>
    <th>Faculty</th>    
    <th></th>
    <th></th>
  </tr>

<% @prog_names.each do |prog_name| %>
  <tr>
    <td><%= prog_name.name %></td>
    <td><%= prog_name.code %></td>
    <td><%= prog_name.faculty.name %></td>
    <td> <a href="/prog_names/<%= prog_name.id %>/edit"><img src="/images/icon/color_18/pencil.png" style="float:left;"/></a></td>
    <td> <a href="/prog_names/erase/<%= prog_name.id %>"><img src="/images/icon/color_18/cross.png" style="float:left;"/></a></td>
  </tr>
<% end %>
</table>

