<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset><legend>Edit Profile</legend>
  <div class="field">
    <label>Fullname</label>
    <%= f.text_field :fullname %>
  </div>
  <div class="field">
    <label>Username</label>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <label>Password</label>
    <%= f.password_field :password,:placeholder=>"Password"%>
  </div>
    <div class="field">    
    <label>Confirm Password</label>
    <%= f.password_field :password_confirmation,:placeholder=>"Confirm Password"%>
  </div>
  <div class="field">
    <label>Role</label>
   <%=collection_select(:user,:role_id,Role.all,:id,:name,:prompt=>"Please Select")%>
  </div>
  <div class="field">
    <label>Role</label>
   <%=collection_select(:user,:faculty_id,Faculty.all,:id,:name,:prompt=>"Please Select")%>
  </div>
</fieldset>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
