		position: absolute;
		float: none;
		right: 3px;
		top: -48px;
		width: auto;
	}
	table.display tbody td {
		padding: 5px 0px!important;
	}
	
	.profile:hover {	
		width: 100%;
		height: 80%;
		opacity:0.3;
		filter:alpha(opacity=30);
		transition: all 0.5s;
		-webkit-transition: all 0.5s;
	}
</style>
<script>
	$(".tops").hide();
	$(".uploadEdit").hide(100);
	$(".uploadNew").hide(100);
	function uploadEdit(id,id2){
			$(".uploadNew").hide(100);
			$(".uploadEdit").hide(100);
			$(".uploadEdit").show(100);
			$(".idd").val(id);
			$(".upid").val(id2)
	}
	
	function uploadNew(id){
			$(".uploadEdit").hide(100);
			$(".uploadNew").hide(100);
			$(".uploadNew").show(100);
			$(".iddNew").val(id);
	}
	
	$("#uploadEditt").click(function(){
                $.getJSON("/upload_save",
                        {
                            id: $(".upid").val(),
                            pictureUp: $(".pictureUp").val(),
                            idd: $(".idd").val()
                        });
                $('#uploadEdit').hide(500);
            }
    );
    $("#uploadNeww").click(function(){
                $.getJSON("/upload_new",
                        {
                            pictureUpNew: $(".pictureUpNew").val(),
                            iddNew: $(".iddNew").val()
                        });
                $('#uploadNew').hide(500);
            }
    );
    
    function loadStudentIntern(id) {
     var oTable = $('#lablist').dataTable({
        	"sDom": "lrtip",
            "sPaginationType": "full_numbers",
            "bProcessing": true,
            "bServerSide": true,
            "bDestroy": true,
            "sAjaxSource": "/get_student_interns?id="+id,
            "aoColumnDefs": [{"bSortable": false, "aTargets": [0,3,4]}],
            "aLengthMenu":[[10,25,50,100],[10,25,50,100]],
            "iDisplayLength": 10,
     });
    } 
</script>