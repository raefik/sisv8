<div id="login" >
  <div class="inner">
  <div align="center"><img src="images/logo/sis2.png"/></div>
  
  
<%= form_for(:session, :url => sessions_path) do |f| %>

<center>
<div class="tip">
<%= f.text_field :email, :placeholder => "Email", :id => "username_id"%>
</div>
</br>
<div class="tip">
<%= f.password_field :password, :placeholder => "Password", :id => "password"%>
</div>
</center>

</br>
<div class="loginButton">
		<div style="float:right; padding:3px 0; margin-right:-12px;">
            <div> 
				<div class="actions">
				<%= f.submit "Sign in", :class => 'uibutton loading', :title => 'Login' %>
				</div> 
            </div>
			  
        </div>
			<div class="clear"></div>	
</div>

<% end %>

</div>
	<div class="clear"></div>
	<div class="shadow"></div>
</div>

