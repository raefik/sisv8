<h4>Register New Student </h4>
<%= form_for(@user) do |f| %>

	<%= f.text_field :name ,:placeholder=>"Student ID" ,:id=>"studid"%>
	<%= f.text_field :password ,:placeholder=>"Identity Card I/C" ,:id=>"ic"%>
	<%= f.text_field :email ,:placeholder=>"Email" ,:id=>"mail"%>
	<%= f.text_field :fullname ,:placeholder=>"Fullname" ,:id=>"fname"%>
	<%= f.text_field :role_id , :value=>"1", :readonly => true %><br><br>
	<%= f.submit "Register", :class => "uibutton loading regclick", :title => "Saving" %>

<% end %>
