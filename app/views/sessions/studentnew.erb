<script >


	$(document).ready(function(){

			$("#findme").click(function(){
					sid = $(".sid").val();
				url = "userfind.json?sid="+sid;
				$.getJSON(url, function(data) {
				if(data[0] != null){
					$(".stud").val(data[0]["name"]);
					cid = $(".cid").val();
					url = "studentfind2.json?cid="+cid;
						$.getJSON(url, function(data) {
							if(data[0] != null){
								$(".cdid").val(data[0]["mykadno"]);
								$(".cliker").click();
							}else{
								$(".cdid").val("N Registered too");
							}
						});

				}else{
					cid = $(".cid").val();
					url = "studentfind2.json?cid="+cid;
						$.getJSON(url, function(data) {
							if(data[0] != null){
								$("#studid").val(data[0]["studentid"]);
								$("#ic").val(data[0]["mykadno"]);
								$("#mail").val(data[0]["email"]);
								$("#fname").val(data[0]["fullname"]);

								$(".stud").val(data[0]["studentid"]);
								$(".cdid").val(data[0]["mykadno"]);
								$(".regclick").click();
							}else{
							$(".stud").val("Nope Registered");
							}
						});
					}
				});
			});
			$("html, body").animate({scrollTop: 1000}, 1000);

	});

</script>
