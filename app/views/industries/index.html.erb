<style>
    table{
        margin: 10px;padding: 10px
        border-collapse: collapse;
        border-spacing: 0;
        padding: 10px;
        margin: 0px;
    }
    table td{
        padding: 10px;
        font-size: 90%;
        border-bottom-style:solid;
        border-bottom-width: 1px;
    }

    table th{
      font-weight:bold; 
      border-bottom-style:solid;
      border-bottom-width: 3px;
      padding-bottom: 10px;
      border-bottom-color: #7F6DDD;
      color: #7F6DDD;
    }
</style>
<h4>Listing industries</h4><%= link_to 'New Industry', new_industry_path ,:class => 'uibutton loading', :title => 'Add new' %>

<table bgcolor="white">
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @industries.each do |industry| %>
  <tr>
    <td><%= industry.name %></td>
    <td><%= link_to 'Edit', edit_industry_path(industry) %></td>
    <td> <a href="/industrys/erase/<%= industry.id %>"><img src="/images/icon/color_18/cross.png" style="float:left;"/></a></td>
  </tr>
<% end %>
</table>

