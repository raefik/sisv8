		<div id="header" style="z-index: 47;">

				<div id="account_info">
					<img class="toplogos" src="/assets/logos.png" height="15px"/>
				<div title="Click Here to Login"></div>
			</div>
		</div><!-- End Header -->
	 <% end %>



<div id="left_menu" style="z-index:47;">
	<ul id="main_menu" class="main_menu">

			<% if signed_in? %>
					<%if current_user.role_id==1%>
					<%=render 'layouts/student'%>
					<%end%>
					<%if current_user.role_id==2%>
					<%=render 'layouts/company'%>
					<%end%>
					<%if current_user.role_id==3 %>
								<li class="limenu" ><%= link_to "Profile", current_user%> </li>
									<%if Staff.find_by_user_id(current_user.id).staff_type_id==1%>
												<%=render 'layouts/coordinator'%>
									<%else %>
										<%if Staff.find_by_user_id(current_user.id).staff_type_id==3%>
												<%=render 'layouts/academic_sv'%>
										<%end%>
									<%end%>
					<%end%>
					<%if current_user.role_id==4%>
					<%=render 'layouts/moderator'%>
					<%end%>
			<% end %>



		<% if signed_in? %>
			<li class="limenu " > <%= link_to "Logout", signout_path, :method => :delete %> </li>
		<% else %>
		<li class="limenu " ><a href="#"><span class="ico gray  file" ></span><b>Register</b></a>
						<ul>
	                          <li ><a href="<%= signup_path %>"> New Company</a></li>
	                    </ul>
		</li>
		<li class="limenu " ><a href="#"><span class="ico gray  paragraph_align_left" ></span><b>Login</b></a>
						<ul>

	                          <li><a href="<%= studentnew_path %>"> Student</a></li>
	                          <li><a href="<%= signin_path %>"> Staff</a></li>
							  <li><a href="<%= signin_path %>"> Company</a></li>
	                    </ul>
		</li>
		<li class="limenu" ><a href="#">Help</a></li>
		  <li class="limenu" ><%= link_to "FAQ", faq_path %></li>
		<!--<li class="limenu " ><%= link_to "Evaluation Form Industrial Supervisor", industry_svs_path %> </li>-->

	<% end %>
</ul>
</div>

