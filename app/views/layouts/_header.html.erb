</style>
<body class="dashborad">
    <div id="alertMessage" class="error"></div>
	 <% if signed_in? %>
     <div id="header" >
        <div id="account_info">
                		<img class="toplogos" src="/assets/logos.png" height="15px" />
					<div class="setting" title="Profile Setting"><b>Welcome,</b> <b class="red">
						<%= current_user.name %></b>
						<img src="/images/gear.png" class="gear"  alt="Profile Setting" >
					</div>
					<div class="logout" title="Disconnect">
						<b><%= link_to "Logout", signout_path %>
							<img src="/images/connect.png" name="connect" class="disconnect" alt="disconnect" />
