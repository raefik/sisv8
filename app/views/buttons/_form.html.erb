<%= form_tag("/add_button", :method=>"post") do %>

  <div class="field">
    <%= label_tag :name %><br />
    <%= text_field_tag :name %>
  </div>
  <div class="field">
    <%= label_tag :gender %><br />
    <%= radio_button_tag :gender,"1"%><%= radio_button_tag :gender,"2"%>
  </div>
  <div class="actions">
    <%= submit_tag %>
  </div>
<% end %>
